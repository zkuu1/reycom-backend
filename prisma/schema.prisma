generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  id         Int      @id @default(autoincrement())
  name_admin String
  email      String   @unique
  password   String
  token      String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("admins")
}

model Category {
  id            Int       @id @default(autoincrement())
  name_category String
  job_type      String
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
  careers       Careers[]

  @@map("categories")
}

model Careers {
  id         Int       @id @default(autoincrement())
  job_name   String
  job_date   DateTime  @default(now())
  categoryId Int?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  category   Category? @relation(fields: [categoryId], references: [id])

  @@map("careers")
}

model Applys {
  id         Int      @id @default(autoincrement())
  name_apply String
  email      String   @unique
  no_hp      String
  gender     String
  domicile   String
  resume     String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("applys")
}

model Contacts {
  id                 Int      @id @default(autoincrement())
  branch             String
  branch_per_country String
  country            String
  email              String   @unique
  no_hp              String
  address            String
  website            String
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt

  @@map("contacts")
}
model Videos {
  id          Int      @id @default(autoincrement())
  title_video String
  link_video  String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("videos")
}

model News {
  id                   Int                 @id @default(autoincrement())
  title                String
  image_news           String?
  image_news_public_id String?
  content              String
  is_archived          Boolean             @default(false)
  carousels            NewsCarousel[]
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
}

model NewsCarousel {
  id          Int      @id @default(autoincrement())
  newsId      Int
  image_url   String
  public_id   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  news        News     @relation(fields: [newsId], references: [id], onDelete: Cascade)
}

model Country {
  id           Int      @id @default(autoincrement())
  name_country String   
  companies    Company[]
  createdAt    DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("countries")
}

model Company {
  id           Int      @id @default(autoincrement())
  countryId    Int
  name_company String   
  country      Country  @relation(fields: [countryId], references: [id])
  branches     BranchCompany[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("companies")
}

model BranchCompany {
  id             Int      @id @default(autoincrement())
  companyId      Int
  name_branch    String   
  street_address String?
  phone          String?
  email          String?
  website        String?
  company        Company  @relation(fields: [companyId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("branch_companies")
}



